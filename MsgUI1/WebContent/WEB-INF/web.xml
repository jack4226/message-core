	<!-- define jdbc resource reference -->
	<resource-ref>
		<res-ref-name>jdbc/msgdb_pool</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>