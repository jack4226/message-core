<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "META-INF/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

   <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
      <param name="Target" value="System.out"/>
      <param name="Threshold" value="TRACE"/>

      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="[%d] %t [%p,%c:%L] %m%n"/>
      </layout>
   </appender>

   <appender name="FILE" class="org.apache.log4j.FileAppender">
      <param name="File" value="./logs/msgcore.log"/>
      <param name="Append" value="false"/>

      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="[%d] %t [%p,%c:%L] %m%n"/>
      </layout>
   </appender>

   <category name="org.jboss.mq">
      <!-- priority value="TRACE" class="org.jboss.logging.XLevel"/ -->
      <priority value="ERROR"/>
   </category>
   
   <category name="org.jboss.remoting">
      <priority value="INFO"/>
   </category>
   
   <logger name="org.springframework">
	  <level value="INFO"/> 
   </logger>

   <logger name="org.springframework.jdbc.core.JdbcTemplate">
	  <level value="debug"/> 
   </logger>
   <logger name="org.springframework.jdbc.core.StatementCreatorUtils">
	  <level value="trace"/> 
   </logger>

   <logger name="org.hibernate.ejb">
	  <level value="INFO"/> 
   </logger>
   <logger name="org.hibernate.engine">
	  <level value="INFO"/> 
   </logger>

   <logger name="org.apache.activemq.ActiveMQSession">
   <!-- suppress messages: [DEBUG,org.apache.activemq.ActiveMQSession:572] ID:Mac-H97I.nc.rr.com-57359-1482084873564-1:5:1 Transaction Commit :null -->
	  <level value="DEBUG"/> 
   </logger>

   <logger name="ltj">
	  <level value="DEBUG"/>
   </logger>

   <root>
      <level value="DEBUG"/>
      <appender-ref ref="CONSOLE"/>
      <appender-ref ref="FILE"/>
   </root>
</log4j:configuration>
